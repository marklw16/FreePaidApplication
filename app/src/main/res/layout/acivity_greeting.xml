<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_greeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.routematch.whitelable.GreetingActivity">

    <TextView
        android:id="@+id/text_greeting_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_greeting_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_greeting_hello"/>

    <Button
        android:id="@+id/button_greeting_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_go"/>

</LinearLayout>
